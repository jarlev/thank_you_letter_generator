<div class="container-fluid">
	<div class="panel panel-default">
		<h4><u>Create a new closing</u></h4>

		<%= form_for Closing.new, url:  closings_path do |f| %>

			<div class="form-group">
				<%= f.label :closing_name %>
				<%= f.text_area :name, class: "form-inline" %>
			</div>
			<div class="form-group">
				<%= f.label :closing %>
				<%= f.text_area :content, class: "form-inline" %>
			</div>
			<%= f.submit "Create new closing", class: "btn btn-default" %>
		<% end %>
	</div>
</div>