<div class="container-fluid">
	<div class="panel panel-default">
		<h4><u>Create a new greeting</u></h4>

		<%= form_for Greeting.new, url: greetings_path do |f| %>

			<div class="form-group">
				<%= f.label :greeting_name %>
				<%= f.text_area :name, class: "form-inline" %>
			</div>
			<div class="form-group">
				<%= f.label :greeting %>
				<%= f.text_area :content, class: "form-inline" %>
			</div>
			<%= f.submit "Create new greeting", class: "btn btn-default" %>
		<% end %>
	</div>
</div>