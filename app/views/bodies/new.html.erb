<div class="container-fluid">
	<div class="panel panel-default">
		<h4><u>Create a new body</u></h4>

		<%= form_for Body.new, url: bodies_path do |f| %>

			<div class="form-group">
				<%= f.label :body_name %>
				<%= f.text_area :name, class: "form-inline" %>
			</div>
			<div class="form-group">
				<%= f.label :body %>
				<%= f.text_area :content, class: "form-inline" %>
			</div>
			<%= f.submit "Create new body", class: "btn btn-default" %>
		<% end %>
	</div>
</div>